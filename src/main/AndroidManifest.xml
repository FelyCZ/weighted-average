<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felycz.weightedaverage">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Default">
        <activity android:name="com.felycz.weightedaverage.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="cz.fely.weightedaverage.SHOW_LICENSES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.felycz.weightedaverage.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Default">
        </activity>
        <activity
            android:name="com.felycz.weightedaverage.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity
            android:name="com.felycz.weightedaverage.LicenceActivity"
            android:label="@string/action_licenses">
        </activity>

        <activity
            android:name="com.felycz.weightedaverage.AboutFragment"
            android:label="@string/aboutAppMenuItem" />
    </application>

</manifest>