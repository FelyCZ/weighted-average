<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/generalHeader">

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_key_general_weight"
            android:title="@string/weightedEnabled"
            android:summaryOff="@string/weightedEnableSummary"
            android:summaryOn="@string/weightedDisableSummary"/>

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/themes"
            android:entryValues="@array/themesValues"
            android:key="pref_key_general_theme"
            android:title="@string/pref_theme_title"
            android:summary="@string/themeSummary"
            android:dialogTitle="@string/pref_theme_dialog_title"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_sound_vibrate">

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_key_sound_vibrate"
            android:title="@string/vibrateSwitchTitle"
            android:summaryOn="@string/vibrateSwitchSummaryOn"
            android:summaryOff="@string/vibrateSwitchSummaryOff"/>
    </PreferenceCategory>
</PreferenceScreen>