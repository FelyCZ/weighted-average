<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/activity_main"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="35dp"
        android:layout_width="500dp"
        android:id="@+id/linearl2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/image1"
        android:layout_toEndOf="@+id/image1">


        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            android:gravity="center_vertical"
            android:text="@string/name"
            android:layout_height="35dp"
            />

        <TextView
            android:id="@+id/mark"
            android:text="@string/mark"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_height="35dp"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/weight"
            android:text="@string/weight"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_height="35dp" />

    </LinearLayout>

    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/lvZnamky"
        android:dividerHeight="1px"
        android:layout_below="@+id/linearl2"
        android:layout_toRightOf="@+id/image1"
        android:layout_toEndOf="@+id/image1" />

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_height="match_parent"
        android:background="?attr/colorAccent"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_toRightOf="@+id/etName"
        android:layout_width="2dp"
        tools:ignore="ContentDescription,NotSibling,RtlHardcoded"
        android:layout_centerInParent="true"
        android:id="@+id/image1"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_toLeftOf="@+id/image1"
        android:layout_toStartOf="@+id/image1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View android:id="@+id/fakeView"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_centerInParent="true"/>

            <EditText
                android:layout_height="40dp"
                android:layout_width="80dp"
                android:id="@+id/etMark"
                android:textSize="16sp"
                android:hint="@string/mark"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:layout_below="@+id/etName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/etWeight"
                android:layout_toStartOf="@+id/etWeight" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/btnAdd"
                android:textSize="18sp"
                android:text="@string/buttonAdd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/button_style"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/etMark"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:id="@+id/averageTV"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:text="@string/prumer"
                android:layout_below="@+id/btnAdd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_height="40dp"
                android:layout_width="60dp"
                android:id="@+id/etWeight"
                android:textSize="16sp"
                android:hint="@string/weight"
                android:inputType="number"
                android:ems="10"
                android:textAlignment="center"
                android:maxLength="3"
                tools:ignore="NotSibling"
                android:layout_above="@+id/btnAdd"
                android:layout_toRightOf="@+id/fakeView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:imeOptions="actionDone" />

            <EditText
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:id="@+id/etName"
                android:textSize="16sp"
                android:hint="@string/hintET"
                android:inputType="text"
                android:ems="10"
                android:maxLength="25"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:layout_toRightOf="@+id/etMark"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>