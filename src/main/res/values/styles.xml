<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="divider">@color/app_background_black</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDT</item>
        <item name="colorAccent">@color/colorAccentDT</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:windowBackground">@color/foreground</item>
        <item name="android:colorBackground">@color/foreground</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="divider">@color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDT</item>
    </style>

    <style name="Dark.Black" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/app_background_black</item>
        <item name="android:colorBackground">@color/app_background_black</item>
        <item name="colorPrimary">@color/colorPrimaryBT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBT</item>
        <item name="colorAccent">@color/colorAccentBT</item>
        <item name="android:colorForeground">@color/app_background_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="divider">@color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimaryBT</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
