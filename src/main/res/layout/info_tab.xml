<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeTabInfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <View
            android:id="@+id/shadowBox"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@drawable/info_tab_template" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shadowBox"
            android:layout_toEndOf="@+id/fakeView"
            android:layout_toRightOf="@+id/fakeView"
            android:background="?attr/colorPrimary">

            <TextView
                android:id="@+id/tvMarkCountTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/fakeView3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/fakeView3"
                android:gravity="center"
                android:text="@string/markCountTemplate"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMarkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="left|center"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/fakeView3"
                android:layout_toEndOf="@+id/fakeView3" />

            <View
                android:id="@+id/fakeView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/fakeView"
            android:layout_alignRight="@+id/fakeView"
            android:layout_below="@+id/shadowBox"
            android:background="?attr/colorPrimary">

            <TextView
                android:id="@+id/tvAverageTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/fakeView2"
                android:layout_toStartOf="@+id/fakeView2"
                android:gravity="center"
                android:text="@string/prumer"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/fakeView2"
                android:layout_toRightOf="@+id/fakeView2"
                android:gravity="left|center"
                android:text="0,0"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/fakeView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="?attr/colorAccent"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:src="@android:drawable/divider_horizontal_dark" />

        </RelativeLayout>

        <View
            android:id="@+id/fakeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</RelativeLayout>