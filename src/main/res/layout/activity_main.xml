<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context="cz.fely.weightedaverage.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:id="@+id/etName"
        android:layout_toStartOf="@+id/etMark"
        android:layout_toLeftOf="@+id/etMark"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tool_bar"
        android:textSize="16sp"
        android:hint="@string/hintET"
        android:inputType="text"
        android:ems="10"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:id="@+id/etWeight"
        android:layout_below="@+id/tool_bar"
        android:textSize="16sp"
        android:hint="@string/weight"
        android:inputType="number"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:maxLength="2"
        android:imeOptions="actionDone"/>


    <LinearLayout
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/linearl2"
        android:layout_below="@+id/averageTV">

        <TextView
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:id="@+id/name"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="normal|italic"
            android:text="@string/name"
            android:layout_weight="1" />

        <TextView
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:id="@+id/mark"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold"
            android:text="@string/mark"
            android:layout_weight="0.24" />

        <TextView
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:id="@+id/weight"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold"
            android:text="@string/weight"
            android:layout_weight="0.25" />

    </LinearLayout>

    <TextView
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:id="@+id/averageTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAdd"
        android:textSize="25sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:text="@string/prumer" />

    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/lvZnamky"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearl2"
        style="@style/Widget.AppCompat.ListView"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btnAdd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etName"
        android:textSize="18sp"
        android:text="@string/buttonAdd"
        android:onClick="addMark"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_style"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:id="@+id/etMark"
        android:textSize="16sp"
        android:hint="@string/mark"
        android:inputType="numberDecimal"
        android:gravity="center_vertical"
        android:imeOptions="actionNext"
        android:layout_alignBaseline="@+id/etWeight"
        android:layout_alignBottom="@+id/etWeight"
        android:layout_toLeftOf="@+id/etWeight"
        android:layout_toStartOf="@+id/etWeight"/>

</RelativeLayout>