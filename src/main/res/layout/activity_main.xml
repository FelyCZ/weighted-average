<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context="cz.fely.weightedaverage.MainActivityOld"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/activity_main"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:id="@+id/linearl2"
        android:layout_below="@+id/averageTV">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            android:gravity="center_vertical"
            android:text="@string/name"
            android:layout_height="35dp"
            />


        <TextView
            android:id="@+id/mark"
            android:text="@string/mark"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_height="35dp"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/weight"
            android:text="@string/weight"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_height="35dp" />
    </LinearLayout>

    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/lvZnamky"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearl2"
        android:dividerHeight="1px" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btnAdd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etName"
        android:textSize="18sp"
        android:text="@string/buttonAdd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_style"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:id="@+id/averageTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAdd"
        android:textSize="25sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:text="@string/prumer" />

    <EditText
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:id="@+id/etName"
        android:textSize="16sp"
        android:hint="@string/hintET"
        android:inputType="text"
        android:ems="10"
        android:imeOptions="actionNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/etMark"
        android:layout_toStartOf="@+id/etMark"
        android:textAlignment="center"
        android:gravity="center"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:id="@+id/etMark"
        android:layout_toStartOf="@+id/etWeight"
        android:layout_toLeftOf="@+id/etWeight"
        android:textSize="16sp"
        android:hint="@string/mark"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignBaseline="@+id/etName"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:id="@+id/etWeight"
        android:textSize="16sp"
        android:hint="@string/weight"
        android:inputType="number"
        android:ems="10"
        android:textAlignment="center"
        android:maxLength="2"
        tools:ignore="UnknownId"
        android:imeOptions="actionDone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>